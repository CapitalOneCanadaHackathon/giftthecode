@model ApplicationUser

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-backend__main-header">
    <div class="admin-backend__main-header-title">
        <a class="admin-backend__main-header-title-back fa fa-chevron-left" asp-action="Index"></a>
        <span class="admin-backend__main-header-title-icon fa fa-trash"></span>
        <span class="admin-backend__main-header-title-text">Delete App User</span>
    </div>

    <div class="admin-backend__main-header-actions">

    </div>
</div>
<div class="admin-backend__main-content admin-user-info">
    <div class="rich-text">
        <p>Are you sure you want to delete this application user?</p>
    </div>

    <table class="table__admin-info table">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Id)
            </td>
            <td>
                @Html.DisplayFor(model => model.Id)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.UserName)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.UserName)
            </td>
        </tr>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="red-button" />
    </form>
</div>
